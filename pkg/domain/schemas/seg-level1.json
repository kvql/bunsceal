{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/kvql/bunsceal/pkg/domain/schemas/seg-level1.json",
  "title": "Security Environment (SegL1)",
  "description": "Definition of a security environment (SegL1)",
  "type": "object",
    "required": [
    "name",
    "id",
    "description",
    "sensitivity",
    "sensitivity_rationale",
    "criticality",
    "criticality_rationale"
  ],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "id": {
      "$ref": "./common.json#/$defs/envId"
    },
    "description": {
      "$ref": "./common.json#/$defs/longDescription"
    },
    "sensitivity": {
      "$ref": "./common.json#/$defs/sensitivityCode"
    },
    "sensitivity_rationale": {
      "$ref": "./common.json#/$defs/longDescription"
    },
    "criticality": {
      "$ref": "./common.json#/$defs/criticalityCode"
    },
    "criticality_rationale": {
      "$ref": "./common.json#/$defs/longDescription"
    },
    "compliance_reqs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "labels": {
      "$ref": "./common.json#/$defs/labels"
    }
  }
}
