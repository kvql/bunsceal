{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/kvql/bunsceal/pkg/domain/schemas/taxonomy.json",
  "title": "Taxonomy aggregate",
  "description": "Aggregated taxonomy structure combining all segment data",
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string",
      "const": "v1beta1"
    },
    "segL1s": {
      "type": "object",
      "description": "Map of environment ID -> SegL1",
      "patternProperties": {
        "^[a-z-]{1,15}$": {
          "$ref": "./seg-level.json"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "Segs": {
      "type": "object",
      "description": "Map of security domain ID -> Seg",
      "patternProperties": {
        "^[a-z0-9-]{1,15}$": {
          "$ref": "./seg-level.json"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    }
  },
  "required": [
    "apiVersion",
    "segL1s",
    "Segs"
  ],
  "additionalProperties": false
}
