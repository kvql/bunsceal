{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/kvql/bunsceal/schema/common.json",
  "title": "Common schema definitions",
  "$defs": {
    "sensitivityCode": {
      "type": "string",
      "enum": [
        "A",
        "B",
        "C",
        "D"
      ]
    },
    "criticalityCode": {
      "type": "string",
      "enum": [
        "1",
        "2",
        "3",
        "4",
        "5"
      ]
    },
    "longDescription": {
      "type": "string",
      "minLength": 70,
      "description": "Long descriptive text; code requires at least ~70 characters"
    },
    "envId": {
      "type": "string",
      "pattern": "^[a-z-]{1,15}$",
      "description": "Environment identifier pattern (lowercase letters and dashes, 1-15 chars)"
    },
    "sdId": {
      "type": "string",
      "pattern": "^[a-z0-9-]{1,15}$",
      "description": "Security domain id pattern (lowercase letters, digits and dashes, 1-15 chars)"
    },
    "compReqKey": {
      "type": "string",
      "pattern": "^[A-Za-z0-9._-]+$",
      "description": "Key for compliance requirement entries"
    }
  }
}
