{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/kvql/bunsceal/schema/comp-req.json",
  "title": "Compliance Requirement",
  "description": "Single compliance requirement entry",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "requirements_link": {
      "type": "string",
      "format": "uri"
    }
  },
  "required": [
    "name",
    "description"
  ],
  "additionalProperties": false
}
